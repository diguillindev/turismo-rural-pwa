---
import '../styles/global.css'
import Layout from '../layouts/Layout.astro';
import Calendar from '../components/Calendar';
import BookingForm from '../components/BookingForm';
---

<Layout title="Turismo Rural Ñuble">
  <main class="container mx-auto py-8 space-y-12">
    <section class="hero bg-base-200">
      <div class="hero-content text-center">
        <div>
          <h1 class="text-5xl font-bold">Turismo Rural Ñuble</h1>
          <p class="py-6">Vive la experiencia del campo, reserva AHORA!.</p>
        </div>
      </div>
    </section>

    <section>
      <h2 class="text-3xl mb-4 text-center">Calendario de actividades</h2>
      <Calendar client:idle />
    </section>

    <section>
      <BookingForm client:load />
    </section>
  </main>
</Layout>